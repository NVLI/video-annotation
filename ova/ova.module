/**
 * Implements hook_theme().
 */
function ova_theme() {
  return array(
    'ovaAudio' => array(
      'variables' => array(
        'items' => NULL,
        'player_extension' => NULL,
        'player_attributes' => NULL,
        'player_image_path' => NULL,
